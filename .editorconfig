# top-level
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
max_line_length = 88          # Matches Ruff default formatter; similar to Black
indent_size = 4
insert_final_newline = true

# TOML (pyproject.toml, ruff.toml, etc.)
[*.toml]
indent_size = 2

# YAML (docker-compose.yml)
[*.yml]
indent_size = 2

# JSON files (.vscode/settings.json, etc.)
[*.json]
indent_size = 2

# Markdown (README.md)
[*.md]
trim_trailing_whitespace = false   # Donâ€™t mangle intentional spacing
insert_final_newline = true

# Shell scripts
[*.sh]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Ignore virtual envs, lock files, etc.
[**/*env*/]
indent_style = space
indent_size = 4
